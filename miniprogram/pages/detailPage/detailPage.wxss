.detail-container{
  height: 400rpx;
  opacity: .9;
  filter: blur(40rpx)
}
.detail-mask{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  background-color: #333333;
  height: 400rpx;
  width:100%;
}
.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  width:100%;
  padding: 20rpx;
}
.detail-img{
  height: 90%;
  width: 280rpx;
  margin-right: 30rpx;
}
.detail{
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
}
.view-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}